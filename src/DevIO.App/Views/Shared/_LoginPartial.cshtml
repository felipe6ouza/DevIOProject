@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-nav navbar-right">
            <li nav-item>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li nav-item>
                <button type="submit" class="btn btn-primary navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav navbar-right">
        <li class="nav-item"><a class="btn btn-dark mob-adjusment pc-adjusment" asp-area="Identity" asp-page="/Account/Register">Inscrever-se</a></li>
        <li class="nav-item"><a class="btn btn-primary mob-alignment" asp-area="Identity" asp-page="/Account/Login">Entrar</a></li>
    </ul>
}