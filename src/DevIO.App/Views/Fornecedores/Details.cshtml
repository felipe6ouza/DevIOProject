@model DevIO.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Detalhes do Fornecedor";
}
<br/>
<h4>@ViewData["Title"]</h4>
<h6>Informações Somente Leitura</h6>
<hr/>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd>
            @this.FormatarDocumento(@Model.TipoFornecedor, @Model.Documento)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TipoFornecedor)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TipoFornecedor)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
</div>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    <a class="btn btn-secondary" href="javascript:window.history.back();">Voltar</a>
</div>

<div>
    <partial name="_DetalhesEndereco"/>
</div>


