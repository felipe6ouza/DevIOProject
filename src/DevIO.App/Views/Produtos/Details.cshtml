@model DevIO.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Detalhes";
}

<h2 style="padding-top: 30px; font-size: 26px; font-weight: bold; ">@ViewData["Title"]</h2>
<h4 style="font-size: 22px;">@Model.Nome</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <img src="~/images/@Model.Imagem" alt="Imagem Produto" style="width: 250px; height: 328px"/>
    </div>
    <div class="col-md-6">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.FornecedorId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Fornecedor.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd>
                @Model.Valor.ToString("c")
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DataCadastro)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Ativo)
            </dd>
        </dl>
        
        <div style="padding-top: 30px;">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
            <a class="btn btn-secondary" href="javascript:window.history.back();">Voltar</a>
        </div>
    </div>
   
</div>

